{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "outDir": "dist",
    // "rootDir": "./src",
    // required for tsyringe
    "experimentalDecorators": true,
    // required for tsyringe
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}