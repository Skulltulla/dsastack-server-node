{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "outDir": "dist",
    // required for tsyringe
    "experimentalDecorators": true,
    // required for tsyringe
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  }
}